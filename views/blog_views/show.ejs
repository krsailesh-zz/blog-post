<!-- blog_views/show.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../_extendables/head_links') %>
</head>

<body>
    <div class="container">
        <div class="card mt-4 mb-4">
            <div class="card-body">
                <h3 class="card-title"> <%= article.title %> </h3>
                <p class="text-muted"> <%= article.published.toLocaleDateString() %>,
                    <%= article.published.toLocaleTimeString() %> </p>
                <p class="card-text"> <%= article.body %> </p>

                <a href="/" class="btn btn-secondary">Go back</a>
                <a href="/edit/<%= article.id %>" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>

    <hr>
    <%- include('../_extendables/footer_scripts') %>

</body>

</html>