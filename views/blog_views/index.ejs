<!-- blog_views/index.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../_extendables/head_links') %>
    <title>Homepage</title>
</head>

<body>
    <div class="container">
        <h1 class="mt-4">All Posts</h1>
        <a href="/new" class="btn btn-success mb-4">New Post</a>

        <% articles.forEach(article => { %>
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title"> <%= article.title %> </h4>
                <p class="card-subtitle text-muted"> <%= article.published.toLocaleDateString() %> </p>
                <p class="card-text"> <%= article.description %> </p>

                <a href="/edit/<%= article.id %>" class="btn btn-secondary mb-2">Edit</a>
                <form action="/<%= article.id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
            </div>
        </div>
        <% }) %>
    </div>

    <hr>
    <%- include('../_extendables/footer_scripts') %>

</body>

</html>